<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/exit_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/iconoExit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/animacio_negres"
    />
    <TextView
        android:id="@+id/textoExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Press back again to close this app"
        android:textSize="75dp"
        android:textColor="@color/abc_search_url_text_pressed"
        android:textStyle="bold"
        android:background="@drawable/abc_cab_background_top_holo_light"
        />
</LinearLayout>