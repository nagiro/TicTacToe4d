<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_principi"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.org.cube.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.32"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/boto_play"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:background="@drawable/boton_play"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
//mantenim 4 ImageView pero els dos actius per ara son visibles
        //els altres dos seran per més endevant que seran so i musica
        //so per efectes de so i música per la musica del joc
        <ToggleButton
            android:id="@+id/boto_so"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:textOn=""
            android:textOff=""
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/boto_ajuda"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/interrogant_boton"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp" />

        <ToggleButton
            android:id="@+id/boto_musica"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/musica"
            android:textOn=""
            android:textOff=""
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/boto_options"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</LinearLayout>