<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@drawable/fondo_layout"
    android:weightSum="1">
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/niveles"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"
            android:text="  LEVEL 1"
            android:background="#FF000000"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.39">

        <TextView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/comptador1"
            android:background="@drawable/f_blava_contador_o"
            android:layout_gravity="center_vertical"
            android:textSize="24dp"
            android:textColor="#FFFFFFFF"
            android:layout_weight="1"
            android:paddingLeft="38dp"
            android:text="00" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/comptador2"
            android:background="@drawable/f_vermella_contador"
            android:layout_gravity="center_vertical"
            android:textSize="24dp"
            android:textColor="#FFFFFFFF"
            android:layout_weight="1"
            android:paddingLeft="38dp"
            android:text="00" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/comptador3"
            android:background="@drawable/f_groga_contador"
            android:layout_gravity="center_vertical"
            android:textSize="24dp"
            android:textColor="#FFFFFFFF"
            android:layout_weight="1"
            android:paddingLeft="38dp"
            android:text="00" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/comptador4"
            android:background="@drawable/f_verda_contador"
            android:layout_gravity="center_vertical"
            android:textSize="24dp"
            android:textColor="#FFFFFFFF"
            android:layout_weight="1"
            android:paddingLeft="38dp"
            android:text="00" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/taula_joc"
        android:stretchColumns="1,2,3,4"
        android:shrinkColumns="1,2,3,4">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i1"
                android:layout_column="1" />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i2"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i3"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i4"
                android:layout_column="1"
                 />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left">

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i5"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i6"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i7"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i8"
                android:layout_column="1"
                 />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i9"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i10"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i11"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i12"
                android:layout_column="1"
                 />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i13"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i14"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i15"
                android:layout_column="1"
                 />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/i16"
                android:layout_column="1"
                 />
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="115dp"
        android:layout_weight="0.30"

        android:id="@+id/publicidad">



        </LinearLayout>


</LinearLayout>